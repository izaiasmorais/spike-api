generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid()) @map("_id")
  name     String
  email    String @unique
  password String

  @@map("users")
}

model Task {
  id          String   @id @default(uuid()) @map("_id")
  name        String
  description String
  createdAt   DateTime @default(now()) @map("created_at")
}
